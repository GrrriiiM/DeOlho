{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/DeOlho.ETL.UnitTests/DeOlho.ETL.UnitTests.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/DeOlho.ETL.UnitTests/DeOlho.ETL.UnitTests.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/DeOlho.ETL.UnitTests/DeOlho.ETL.UnitTests.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "test with coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
             "test",
             "/p:CollectCoverage=true",
             "/p:Exclude=\"[xunit*]*\"",
             "/p:CoverletOutputFormat=lcov",
             "/p:CoverletOutput=./lcov",
             "${workspaceFolder}/ETL.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
             "kind": "test",
             "isDefault": true
            }
        }
    ]
}